{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "docs/**/*",
      "drizzle/**/*",
      "migrations/**/*",
      "**/node_modules/**/*",
      "**/dist/**/*",
      "**/build/**/*",
      "**/.react-router/**/*",
      "**/worker-configuration.d.ts",
      "packages/ui/src/**/*",
      "apps/web/tailwind.config.js"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": true,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "warn",
        "noParameterAssign": "off",
        "noShoutyConstants": "warn",
        "useNamingConvention": "error"
      },
      "correctness": {
        "noEmptyPattern": "off",
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": [
              "className"
            ],
            "functions": [
              "cx",
              "clsx",
              "cva",
              "cn"
            ]
          }
        }
      },
      "suspicious": {
        "noDebugger": "off",
        "noConsoleLog": "info"
      }
    }
  }
}